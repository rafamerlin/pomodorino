{
  "name": "pomodorino",
  "productName": "Pomodorino",
  "version": "0.4.3",
  "description": "",
  "main": "app/main.js",
  "scripts": {
    "build": "tsc",
    "prestart": "yarn run build",
    "start": "electron ./app/main.js --no-sandbox",
    "pack": "electron-builder --dir",
    "predist": "yarn run build",
    "dist": "electron-builder",
    "prerelease": "yarn run build",
    "release": "build"
  },
  "author": "Rafael Merlin <rafamerlin@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/howler": "^2.1.0",
    "@types/node-notifier": "^5.4.0",
    "electron": "^9.4.0",
    "electron-builder": "^20.39.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "fs-jetpack": "^2.2.2",
    "howler": "^2.1.2",
    "jimp": "^0.10.2",
    "node-notifier": "^5.4.0",
    "timrjs": "^1.0.1"
  },
  "build": {
    "appId": "Pomodorino",
    "files": [
      "build/**/*",
      "res/**/*",
      "app/**/*",
      "src/**/*.html",
      "src/**/*.css"
    ],
    "mac": {
      "category": "Time.Management",
      "target": [
        {
          "target": "dmg"
        },
        {
          "target": "tar.gz"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "tar.gz"
        },
        {
          "target": "pacman"
        },
        {
          "target": "deb"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable"
        },
        {
          "target": "zip"
        }
      ]
    }
  },
  "postinstall": "electron-builder install-app-deps"
}
